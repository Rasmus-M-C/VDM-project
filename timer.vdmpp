class Timer 

instance variables

  currentTime : nat := 0;
  endSimTime : nat := 0;

values 

  stepLength : nat = 1;

operations

public 
  Step:() ==> ()
  Step() == 
    currentTime := currentTime + stepLength;

pure public
  getTime: () ==> nat 
  getTime() == 
  return currentTime;
  
public
  GetEndSimTime: () ==> nat
  GetEndSimTime() == 
  return endSimTime;

public SetEndTime: nat ==> ()
SetEndTime(newEndTime) == 
  endSimTime := newEndTime;

end Timer